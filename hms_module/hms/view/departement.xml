<odoo>
  <data>
    <record id="view_department" model="ir.ui.view">
      <field name="name">Department</field>
      <field name="model">hms.department</field>
      <field name="arch" type="xml">
        <form string="Department">
          <sheet>
            <group>
              <field name="name"/>
            </group>
            <group>
              <field name="capacity"/>
            </group>
            <group>
              <field name="is_opened"/>
            </group>
            <group>
              <field name="patients"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>
 <record id="department_tree_view" model="ir.ui.view">
            <field name="name">department.tree</field>
            <field name="model">hms.department</field>
            <field name="arch" type="xml">
                <tree>
                     <field name="name"/>
                    <field name="capacity"/>
                    <field name="is_opened"/>
                    <field name="patients"/>
                </tree>
            </field>
        </record>
</data>
</odoo>
